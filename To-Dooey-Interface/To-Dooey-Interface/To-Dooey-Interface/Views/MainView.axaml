<UserControl x:Class="To_Dooey_Interface.Views.MainView"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:To_Dooey_Interface.ViewModels"
             x:DataType="vm:MainViewModel">
	<Grid>
		<!-- Row definitions for layout control -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Row for the button -->
			<RowDefinition Height="*"/>
			<!-- Row for the ListBox, taking up the rest of the space -->
		</Grid.RowDefinitions>

		<!-- Button for adding a new list -->
		<Button Content="Add List" Command="{Binding AddListCommand}" Grid.Row="0" Margin="10"/>

		<!-- ListBox to display the lists -->
		<ListBox Items="{Binding Lists}" Grid.Row="1" Margin="10">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding Name}"/>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</UserControl>
