<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:To_Dooey_Interface.ViewModels"
        xmlns:views="clr-namespace:To_Dooey_Interface.Views"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="To_Dooey_Interface.Views.MainWindow"
        Title="To Do"
        Icon="/Assets/avalonia-logo.ico">

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!-- Side Panel -->
		<Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Background="#F0F0F0" Margin="12" MinWidth="200">
			<StackPanel Orientation="Vertical">
				<!-- Side Panel Title -->
				<TextBlock Text="Lists" FontSize="24" FontWeight="Bold" Margin="12,12,12,0" HorizontalAlignment="Center"/>

				<!-- List of Lists -->

				<!-- New List Button -->
				
				<Button DockPanel.Dock="Top" 
						HorizontalAlignment="Stretch"
						Background="LightBlue"
						CornerRadius="20"
						
						FontSize="16"
						FontWeight="Bold"
						Command="{Binding AddListCommand}"
						HorizontalContentAlignment="Center">New List
						<Button.Styles>
						
						</Button.Styles>
				</Button>
				<Button DockPanel.Dock="Top"
						HorizontalAlignment="Stretch"
						Background="LightBlue"
						CornerRadius="20"
						Margin="0,0,0,0"
						FontSize="16"
						FontWeight="Bold"
						Command="{Binding UpdateListCommand}"
						HorizontalContentAlignment="Center">
					UpdateList
				</Button>
				<Button DockPanel.Dock="Top"
						HorizontalAlignment="Stretch"
						Background="LightBlue"
						CornerRadius="20"
						Margin="0,0,0,0"
						FontSize="16"
						FontWeight="Bold"
						Command="{Binding DeleteListCommand}"
						HorizontalContentAlignment="Center">DeleteList
				</Button>
				

					<ListBox ItemsSource="{Binding Lists}" SelectedItem="{Binding SelectedList}" BorderThickness="0">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Margin="12,0,12,0" />
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
				
				


			</StackPanel>
			
			

		</Border>

		<!-- Header with Title and Buttons -->
		<StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" VerticalAlignment="Top" Margin="12">
			<TextBlock Text="To Dooey" FontSize="30" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" />

			<!-- Add Task Button -->
			<Button DockPanel.Dock="Top"
						HorizontalAlignment="Left"
						Margin="0,5,0,0"
						Background="LightBlue"
						PointerPressed=""
						CornerRadius="20"
						FontSize="16"
						FontWeight="Bold"
						Command="{Binding AddTaskCommand}"
						HorizontalContentAlignment="Center">Add Task</Button>
			<Button DockPanel.Dock="Top"
						HorizontalAlignment="Left"
						Background="LightBlue"
						CornerRadius="20"
						Margin="0,0,0,0"
						FontSize="16"
						FontWeight="Bold"
						Command="{Binding UpdateTaskCommand}"
						HorizontalContentAlignment="Left">UpdateTask
			</Button>
			<Button DockPanel.Dock="Top"
						HorizontalAlignment="Left"
						Background="LightBlue"
						CornerRadius="20"
						Margin="0,0,0,0"
						FontSize="16"
						FontWeight="Bold"
						Command="{Binding DeleteTaskCommand}"
						HorizontalContentAlignment="Left">DeleteTask

			</Button>
			
			<!--<Button Content="Add Task" Command="{Binding AddTaskCommand}" Margin="0,4,12,0" HorizontalAlignment="Left" />-->
		</StackPanel>


		<!-- List of Tasks for Selected List -->
		<ScrollViewer Grid.Column="1" Grid.Row="1" Margin="12">
			<ListBox ItemsSource="{Binding SelectedList.Tasks}" SelectedItem="{Binding SelectedTask}" BorderThickness="0">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<CheckBox IsChecked="{Binding IsCompleted}" Margin="12,0,0,0" />
							<TextBlock Text="{Binding Description}" FontSize="16" />
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</ScrollViewer>
	</Grid>

</Window>